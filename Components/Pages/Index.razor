@code {
	private bool _slickInitialized = false;

	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender && !_slickInitialized)
		{
			await _JSRuntime.InvokeVoidAsync("initializeScripts");
		}
	}

	private void AddToCart(Produit product)
	{
		Cart.AddToCart(new CartItem
		{
			Id = product.Id,
			Nom = product.Nom,
			Prix = product.Prix,
			Photo = product.Photo1,
			Qte = 1
		});
	}

	private void GoToDetails(int id)
	{
		_NavManager.NavigateTo($"/Details/{id}");
	}
}
